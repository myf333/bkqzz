<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Theme.AppCompat.NoActionBar</item>
        <item name="colorPrimary">@color/color_red</item>
        <item name="colorAccent">@color/color_red</item>
        <!--<item name="android:windowAnimationStyle">@style/activityAnim</item>-->
        <item name="android:windowBackground">@color/color_gray_five</item>
    </style>

    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_gray_five</item>
    </style>

    <style name="text_big_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_gray1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_mid_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_gray1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
